pipeline {
    agent {
        docker 'mave:3.5-alpine'
    }
    stages {
        stage ('Checkout') {
            steps {
                git 'https://github.com/effectivejenkins/spring-petclink.git'
            }
        }
        stage ('Build') {
            steps {
                sh 'mvn clean package'
                junit '**/target/surefire-reports/TEST-*.xml'
            }
        }
    }
}
